    <div class="baseContainer mx-auto w-11/12">
        <main role="main" class="pb-3 text-white">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center  m-4 text-white">
        <span class="m-auto">@DateTime.Now.Year - Budget&Investment</span>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js"></script>
    @RenderSection("Scripts", required: false)
