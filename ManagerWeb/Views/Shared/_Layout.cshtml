@{
    string devMaterial = "https://unpkg.com/@material-ui/core@latest/umd/material-ui.development.js";
    string prodMaterial = "https://unpkg.com/@material-ui/core@latest/umd/material-ui.production.min.js";
}

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Base.css" />
    <link rel="stylesheet" href="~/css/tailwind.css" />
    <environment include="Development">
        <!-- Dependencies -->
        <script src="https://unpkg.com/react@16/umd/react.development.js" crossorigin></script>
        <script src="https://unpkg.com/react-dom@16/umd/react-dom.development.js" crossorigin></script>
        <script src="@devMaterial" crossorigin></script>
        <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js" crossorigin></script>
    </environment>
    <environment exclude="Development">
        <!-- Dependencies -->
        <script src="https://unpkg.com/react@16/umd/react.production.js" crossorigin></script>
        <script src="https://unpkg.com/react-dom@16/umd/react-dom.production.js" crossorigin></script>
        <script src="@prodMaterial" crossorigin></script>
        <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js" crossorigin></script>
    </environment>
</head>
<body class="bg-mainDarkBlue bg-black h-full flex flex-col overflow-x-hidden">
    <header class="bg-mainDarkBlue flex flex-row text-white p-4 px-12">
        <div>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <partial name="~/Views/IconsPartials/Logo.cshtml" />
            </a>
        </div>
        <div id="navMenu" class="ml-auto">
            @* <nav class="border-bottom box-shadow ">
                    <div class="flex flex-col spin circle button justify-center w-12 h-12" onClick={this.menuClick}>
                        <div class="w-3/5 bg-white mb-2 h-1 rounded-lg mx-auto"></div>
                        <div class="w-3/5 bg-white mb-2 h-1 rounded-lg mx-auto"></div>
                        <div class="w-3/5 bg-white h-1 rounded-lg mx-auto"></div>
                    </div>
                    <div class="containerClosed absolute text-white bg-black w-48"}>
                        <a class="block">Home</a>
                        <a class="block">Platby</a>
                    </div>
                </nav> *@
        </div>
    </header>
    <div class="baseContainer mx-auto w-11/12">
        <main role="main" class="pb-3 text-white">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center  m-4 text-white">
        <span class="m-auto">@DateTime.Now.Year - Budget&Investment</span>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
