<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/tailwind.css" />
</head>
<body class="bg-mainDarkBlue bg-black h-full flex flex-col">
    <header class="flex-none bg-mainDarkBlue flex flex-row text-white p-4">
        <div>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LOGO</a>
        </div>
        <nav class="border-bottom box-shadow ml-auto">
            <div class="container">
                <div>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Overview</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="m-auto flex-auto overflow-y-auto w-full px-24">
        <main role="main" class="pb-3 text-white">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center flex-none m-4 text-white">
        <span class="m-auto">@DateTime.Now.Year - Budget&Investment</span>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
